<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Warranty Claim Form</title>
    <style>
        form {
            max-width: 400px;
            margin: auto;
            height: 400px;
            padding: 1em;
            border: 1px solid #ccc;
            border-radius: 1em;
        }
        div + div {
            margin-top: 1em;
        }
        input {
            width: 100%;
            padding: 0.5em;
            box-sizing: border-box;
        }
        button {
            padding: 0.7em;
            color: #fff;
            background-color: orange;
            border: none;
            border-radius: 1em;
            cursor: pointer;
        }
        button:disabled {
            background-color: #ccc;
        }
        #statusSection {
            margin-top: 1em;
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
            padding: 1em;
            border: 1px solid #ccc;
            border-radius: 1em;
        }
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #f0f0f0;
            width: 100%;
        }

        

        .container {
            width: 70%; /* Set the width of the container */
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        *
        {
           
        }

    </style>
</head>
<body>
    <nav style="display: flex; justify-content: space-between;height: 10%; align-items: center; padding: 1em; background-color: white; color: white; width: 100%; position: fixed; top: 0; left: 0; z-index: 1000;">
        <div class="logo" style="font-size: 1.5em;">
            <img src="../../statics/BitBox_logo1.png" alt="">
        </div>
        <div class="title" style="
        font-size: 1.2em;
        color: black;
        font-weight: 600;
        margin: 0 auto;
        text-align: center;
        width: 100%;
        max-width: 600px; /* Optional: Adjust the max-width as needed */
    ">
       <h1 style="margin-left: -30px;">Check Warranty Claim</h1> 
    </div>
      
    </nav>

    <form id="warrantyClaimForm" style="margin-top: 8%;">
        <div>
            <label for="certificateId">Certificate ID:</label>
            <input type="text" id="certificateId" name="certificateId" required>
        </div>
        <div>
            <label for="phoneNumber">Phone Number:</label>
            <input type="tel" id="phoneNumber" name="phoneNumber" required>
        </div>
        <div>
            <label for="emailId">Email ID:</label>
            <input type="email" id="emailId" name="emailId" required>
        </div>
        <div>
            <label for="serialNumber">Serial Number:</label>
            <input type="text" id="serialNumber" name="serialNumber" required>
        </div>
        <div>
            <label for="message">Query:</label>
            <input type="text" id="query" name="query" required>
        </div>
        <div>
            <button type="submit">Submit</button>
        </div>
    </form>

    <div id="statusSection" >
        <h2>Check Your Warranty Claim Status</h2>
        <div>
            <label for="checkCertificateId">Certificate ID:</label>
            <input type="text" id="checkCertificateId" name="checkCertificateId" required>
        </div>
        <div>
            <button id="checkStatusButton">Check Status</button>
        </div>
        <div id="statusResult"></div>
    </div>

    <script>
        document.getElementById('warrantyClaimForm').addEventListener('submit', async function (event) {
            event.preventDefault();

            const formData = {
                certificateId: document.getElementById('certificateId').value,
                phoneNumber: document.getElementById('phoneNumber').value,
                emailId: document.getElementById('emailId').value,
                serialNumber: document.getElementById('serialNumber').value,
                message: document.getElementById('query').value,
                status: 'submitted'
            };
            console.log(formData);

            try {
                const response = await fetch('https://bitbox-userside.onrender.com/submit-warranty-claim', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });

                if (response.ok) {
                    alert('Warranty claim submitted successfully');
                } else {
                    const errorData = await response.json();
                    alert(`${errorData.message}`);
                }
            } catch (error) {
                alert('Error submitting warranty claim');
            }
        });

        document.getElementById('checkStatusButton').addEventListener('click', async function () {
            const certificateId = document.getElementById('checkCertificateId').value;

            try {
                const response = await fetch(`https://bitbox-userside.onrender.com/warrantyClaim/status/${certificateId}`, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    const result = await response.json();
                    document.getElementById('statusResult').innerText = `Status: ${result.status}`;
                } else {
                    document.getElementById('statusResult').innerText = 'Error checking status or certificate not found';
                }
            } catch (error) {
                document.getElementById('statusResult').innerText = 'Error checking status';
            }
        });
    </script>
</body>
</html>
